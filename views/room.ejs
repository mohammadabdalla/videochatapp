  <title>Document</title>
  <style>
    *{
      margin: 0;
      padding: 0;
    }
    header{
      background-color: #1D2635;
     
    }
    #title{
      text-align: center;
      color: whitesmoke;
      font-size: 30px;
      padding: 10px;
    }
    #mybody{
      background-color: #161D29;
    }
    #video-grid {
      
      display: flex;
    
     
      
    }
    
    video {
      width: 400px;
      height: 400px;
      border-radius: 10px;
      margin: 10px;
    }
    footer {
   position: fixed;
   left: 0;
   bottom: 0;
   width: 100%;
   background-color: #1D2635;
   color: whitesmoke;
   padding: 10px;
   text-align: center;
}
.video-options-group{
  display: flex;
  justify-content: center;
}
.video-option{
 /*  padding: 10px; */
  width: 15%;
  
  
}
.video-option i{
font-size: 25px;
cursor: pointer;

}
.leave-call{
  background-color: #E74335;
  width: 50px;
  border-radius: 10px;
}
.disableVidel{
  width: 100%;
  height: 100%;
  background-color: black;
  z-index: 1;
}

.hideElement{
  display: none;
}


  </style>
</head>
<body id="mybody">
  <header>
    <div id="title">Video Chat</div>
  </header>
     <div class="video-options-group">
      <div id="video-grid" ></div>
     </div>
    
     <footer>
       <div class="video-options-group">
         <div class="video-option">
            <i class="fas fa-video" id="videoEnabledIcon" onclick="Video_Option_Handler('disable')"></i>
            <i class="fas fa-video-slash hideElement" id="videoDisabledIcon"   onclick="Video_Option_Handler('enable')"></i> 
         </div>
        
         <div class="video-option">
          <i id="muteEnabledIcon" class="fas fa-microphone"    onclick="Mute_Option_Handler('disable')"></i>
          <i id="muteDisabledIcon" class="fas fa-microphone-slash hideElement" onclick="Mute_Option_Handler('enable')"></i> 
         </div>
        <div class="video-option" style="display: flex;justify-content: center;">
          <div style="padding: 5px;" class="leave-call">
            <i class="fas fa-phone" style="transform: rotate(-135deg);" onclick="Leave_Call()"></i>
          </div>
          
        </div>
        
       </div>
     
     </footer>
 
</body>
</html>