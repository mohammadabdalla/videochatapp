<body id="mybody" >
 
  <header>
    <div style="display: flex;justify-content: space-between;">
      <div id="title">Video Chat</div>
      <div>
        <div id="chatbutton" onclick="ConversationBarHandler('show')"><i class="fas fa-comment"></i>
          <span id="notificationFlag" class="hideElement"
          style="height: 10px;width: 10px;border-radius: 50%;background-color:red;margin-left: -10px;margin-bottom: 18px;position: fixed;"></span>
        </div>
         
      </div>
      
    </div>
    
  </header>
  <!--   <div class="hideElement" id="notificationFlag" style="color: whitesmoke;">notifications</div>
 -->
     <div id="video-grid" ></div>


    <div id="chat-container">
      <div class="chatHeader"><i style="color: whitesmoke;font-size: 30px;cursor: pointer;margin-top: 10px;margin-left: 10px;" class="fas fa-times-circle" onclick="ConversationBarHandler('hide')"></i></div>
    <div id="chatMessages">

    </div>

    <div class="chatbottom" style="text-align: center;">
      <input id="chatInput" placeholder="Enter a message" type="text">
      <i id="sendButton" class="fas fa-location-arrow"  style="cursor: pointer;transform: rotate(40deg);color: rgb(9, 10, 27);font-size: 20px;"></i>
 
     </div>
    </div> 
    
    
    
     
    
     <footer>
       <div class="video-options-group">
         <div class="video-option">
            <i class="fas fa-video" id="videoEnabledIcon" onclick="Video_Option_Handler('disable')"></i>
            <i class="fas fa-video-slash hideElement" id="videoDisabledIcon"   onclick="Video_Option_Handler('enable')"></i> 
         </div>
        
         <div class="video-option">
          <i id="muteEnabledIcon" class="fas fa-microphone"    onclick="Mute_Option_Handler('disable')"></i>
          <i id="muteDisabledIcon" class="fas fa-microphone-slash hideElement" onclick="Mute_Option_Handler('enable')"></i> 
         </div>
        <div class="video-option" style="display: flex;justify-content: center;">
          <div style="padding: 5px;" class="leave-call">
            <i class="fas fa-phone" style="transform: rotate(-135deg);" onclick="Leave_Call()"></i>
          </div>
          
        </div>
        
       </div>
     
     </footer>
 
</body>
</html>